<h1>Modelos de Produtos</h1>

<% if !@product_models.any?%>
    <div>
        <p>Não há produtos cadastrados!</p>
    </div>
<%end %>

<%= link_to 'Cadastrar produtos', new_product_model_path %>

<% @product_models.each do |p| %>
    <div>
        <h2><%= link_to p.name, product_model_path(p.id) %></h2>
        <dl>
            <dt>Marca: </dt>
            <dd><%= p.supplier.brand_name %></dd>
            <dt>SKU: </dt>
            <dd><%= p.sku %></dd>
        </dl>
    </div>
<% end %>