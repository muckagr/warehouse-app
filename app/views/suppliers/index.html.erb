<h1>Fornecedores</h1>

<% if @suppliers.any? %>
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Localização</th>
            </tr>
        </thead>
        <tbody>
            <% @suppliers.each do |s| %>
                <tr>
                    <td><%= link_to s.brand_name, supplier_path(s.id) %></td>
                    <td><%= s.city %>/<%= s.state %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <br>
<% else %>
    <p>Não há fornecedores cadastrados!</p>
<% end %>

<div>
    <%= link_to 'Cadastrar Fornecedor', new_supplier_path %>
</div>